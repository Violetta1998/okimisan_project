<Page x:Class="okimisan_app.Screens.CreateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:okimisan_app.Screens"
        mc:Ignorable="d"
        Title="CreateOrder" Height="300" Width="350">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="204*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Height="43" Margin="3,0,0,0" VerticalAlignment="Top" Width="339">
            <Label x:Name="label" Content="ОКИМИ САН" HorizontalAlignment="Left" Margin="3,5,0,0" VerticalAlignment="Top" Foreground="White"/>
            <Button x:Name="orders" Content="Заказы" HorizontalAlignment="Left" Margin="90,8,0,0" VerticalAlignment="Top" Width="60" Foreground="#958568" Background="Transparent" BorderBrush="Transparent" />
            <Button x:Name="menu" Content="Меню" HorizontalAlignment="Left" Margin="146,8,0,0" VerticalAlignment="Top" Width="60" Foreground="White" Background="Transparent" BorderBrush="Transparent" Click="button_Copy_Click" RenderTransformOrigin="-0.046,0.467" />
            <Button x:Name="clients" Content="Клиенты" HorizontalAlignment="Left" Margin="210,8,0,0" VerticalAlignment="Top" Width="60" Foreground="White" Background="Transparent" BorderBrush="Transparent" Click="button_Copy_Click" RenderTransformOrigin="-0.046,0.467" />
            <Button x:Name="settings" Content="Настройки" HorizontalAlignment="Left" Margin="274,8,-3,0" VerticalAlignment="Top" Width="68" Foreground="White" Background="Transparent" BorderBrush="Transparent" Click="button_Copy_Click" RenderTransformOrigin="-0.046,0.467" />
        </Grid>

        <Label x:Name="label1" Content="Принять новый заказ" HorizontalAlignment="Left" Margin="3,43,0,0" VerticalAlignment="Top" Foreground="#958568" Background="Transparent" Width="128"/>
        <Label x:Name="label2" Content="Имя" HorizontalAlignment="Left" Margin="3,69,0,0" VerticalAlignment="Top" Foreground="white" Background="Transparent"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="20" Margin="8,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" TextChanged="textBox_TextChanged" Foreground="White" Background="White"/>

        <Label x:Name="phone" Content="Номер телефона" HorizontalAlignment="Left" Margin="3,114,0,0" VerticalAlignment="Top" Foreground="white" Background="Transparent"/>
        <TextBox x:Name="phone2" HorizontalAlignment="Left" Height="20" Margin="8,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" TextChanged="textBox_TextChanged" Foreground="White" Background="White"/>
        <Label x:Name="label3" Content="Примечание" HorizontalAlignment="Left" Margin="4,160,0,0" VerticalAlignment="Top" Foreground="white" Background="Transparent"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="52" Margin="10,186,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="116" Background="White" Foreground="White" Grid.RowSpan="2" />

    </Grid>
</Page>

