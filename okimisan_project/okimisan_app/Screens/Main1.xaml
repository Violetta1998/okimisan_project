<Page x:Class="okimisan_app.Screens.Main1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:okimisan_app.Screens"
      mc:Ignorable="d"
      Title="main1" Height="349.5" Width="676.5">

    <Grid Background="Black" MinWidth="400" MinHeight="250">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid   VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="label" Content="ОКИМИ САН" Grid.Column="0" Grid.Row="0" Foreground="White" Background="Black"/>

            <Menu x:Name="orders"  Grid.Column="2" Grid.Row="0" Foreground="White" HorizontalAlignment="Left" Background="Black" BorderBrush="White"/>
            <MenuItem Header="Заказы" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#958568">
                <MenuItem Header="Список заказов" Foreground="#958568" Background ="Black" BorderBrush="White" />
                <MenuItem Header="Принять новый заказ" Foreground="#958568" Background ="Black" BorderBrush="White" />
                <MenuItem Header="Удалить заказ" Foreground="#958568" Background ="Black" BorderBrush="White" />
            </MenuItem>


            <Menu x:Name="menu"  Grid.Column="4" Grid.Row="0" Foreground="White" Background="Black" BorderBrush="Transparent"/>
            <MenuItem Header="Меню" Grid.Column="4" Grid.Row="0" Foreground="#958568">
                <MenuItem Header="Меню блюд" Foreground="#958568" Background ="Black" BorderBrush="White" />
                <MenuItem Header="Меню ингредиентов" Foreground="#958568" Background ="Black" BorderBrush="White" />
                <MenuItem Header="Список продуктов" Foreground="#958568" Background ="Black" BorderBrush="White" />
                <MenuItem Header="Складской учёт" Foreground="#958568" Background ="Black"  BorderBrush="White" />
            </MenuItem>

            <Menu x:Name="clients"  Grid.Column="6" Grid.Row="0" Foreground="#958568" Background="Black" BorderBrush="Transparent"/>
            <MenuItem Header="Клиенты" Grid.Column="6" Grid.Row="0" Foreground="#958568">
                <MenuItem Header="Складской учёт" Foreground="White"  Background ="Black" BorderBrush="#958568" />
            </MenuItem>

            <Menu x:Name="settings"  Grid.Column="8" Grid.Row="0" Foreground="#958568" Background="Black" BorderBrush="Transparent"/>
            <MenuItem Header="Настройки" Grid.Column="8" Grid.Row="0" Foreground="#958568">
                <MenuItem Header="Пользователи" Foreground="#958568"  Background ="Black" BorderBrush="White" />
                <MenuItem Header="Отчеты" Foreground="#958568" Background ="Black" BorderBrush="White" HorizontalAlignment="Right"  />
            </MenuItem>
        </Grid>

        <Image x:Name="image" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Top"  Source="/okimisan_app;component/Resources/logo.png" Opacity="1" Stretch="Uniform" IsEnabled="True" />
    </Grid>
</Page>
    
    
