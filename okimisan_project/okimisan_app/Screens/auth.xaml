<Page x:Class="okimisan_app.Screens.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:okimisan_app.Screens"
      xmlns:components="clr-namespace:okimisan_app.Components"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Auth">

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*" MinWidth="200"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="80pt"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="ОКИМИ САН" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20pt"/>
                    <RowDefinition Height="20pt"/>
                    <RowDefinition Height="20pt"/>
                    <RowDefinition Height="20pt"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="ПОЛЬЗОВАТЕЛЬ" Foreground="White" HorizontalContentAlignment="Left" FontSize="12" VerticalContentAlignment="Center" />
                <ComboBox x:Name="comboBox" Grid.Row="1" BorderBrush="Black" Background="#eaeaea" Foreground="Black" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="Официант" Foreground="Black" Background="#eaeaea" BorderBrush="Black"/>
                    <ComboBoxItem Content="Менеджер" Foreground="Black" Background="#eaeaea" BorderBrush="Black"/>
                    <ComboBoxItem Content="Менеджер зала" Foreground="Black" Background="#eaeaea" BorderBrush="Black"/>
                    <ComboBoxItem Content="Шеф повар" Foreground="Black" Background="#eaeaea" BorderBrush="Black"/>
                    <ComboBoxItem Content="Босс" Foreground="Black" Background="#eaeaea" BorderBrush="Black"/>
                </ComboBox>
                <Label x:Name="additionalLabel" Grid.Row="2" Content="ИМЯ" Foreground="White" HorizontalContentAlignment="Left" FontSize="12" VerticalContentAlignment="Center" />
                <TextBox x:Name="additionalTextBox" Grid.Row="3" Foreground="Black" BorderBrush="Black" CaretBrush="Black" SelectionBrush="#FF56595D" Background="#eaeaea" VerticalContentAlignment="Center"/>
                <PasswordBox x:Name="additionalPasswordBox" Grid.Row="3" Foreground="Black" BorderBrush="Black" CaretBrush="Black" SelectionBrush="#FF56595D" Background="#eaeaea" VerticalContentAlignment="Center" Visibility="Collapsed" />
            </Grid>
            <Label x:Name="notification" Grid.Row="2" Content="" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Bottom" />
            <Button Grid.Row="3" x:Name="button" Content="Войти" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="20pt" Background="Black" BorderBrush="White" Foreground="White" ButtonBase.Click="button_Click"/>
        </Grid>
    </Grid>
</Page>
